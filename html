.boton {
  background-color: #007BFF;
  color: white;
  padding: 10px;
}
<button class="boton">Enviar</button>
<button class="boton">Cancelar</button>
#header {
  background-color: #333;
  color: white;
  padding: 20px;
}
<header id="header">Mi Encabezado</header>
.elemento {
  border: 1px solid red; /* Borde de 1px de grosor, sólido y color rojo */
  padding: 10px; /* Espacio interno del borde */
}
<div class="contenedor">
  <div class="item">Elemento 1</div>
  <div class="item">Elemento 2</div>
  <div class="item">Elemento 3</div>
</div>
.contenedor {
  display: flex;
  justify-content: space-around; /* Distribuye el espacio entre los elementos */
  align-items: center; /* Alinea los elementos verticalmente */
  height: 100vh; /* Altura del contenedor */
}

.item {
  background-color: #007BFF;
  color: white;
  padding: 20px;
  border-radius: 5px;
}
<div class="grid-container">
  <div class="grid-item">1</div>
  <div class="grid-item">2</div>
  <div class="grid-item">3</div>
  <div class="grid-item">4</div>
</div>
.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 2 columnas de igual tamaño */
  gap: 10px; /* Espacio entre los elementos */
}

.grid-item {
  background-color: #28A745;
  color: white;
  padding: 20px;
  border-radius: 5px;
  text-align: center;
}
/* Estilos por defecto */
body {
  font-size: 16px;
}

/* Estilos para pantallas más pequeñas */
@media (max-width: 600px) {
  body {
    font-size: 14px;
  }
}

/* Estilos para pantallas más grandes */
@media (min-width: 1200px) {
  body {
    font-size: 18px;
  }
}
